<script>
    // --- CHANGE CLOUDINARY DETAILS HERE ---
    const CLOUD_NAME = "your_cloud_name"; // Change this
    const UPLOAD_PRESET = "your_unsigned_preset"; // Change this
    // ---------------------------------------

    const myWidget = cloudinary.createUploadWidget({
        cloudName: CLOUD_NAME, 
        uploadPreset: UPLOAD_PRESET,
        sources: ['local', 'url', 'camera'] //
    }, (error, result) => { 
        if (!error && result && result.event === "success") { 
            document.getElementById('image-url').value = result.info.secure_url; 
            document.getElementById('preview-img').src = result.info.secure_url;
            document.getElementById('preview-img').style.display = 'block';
            document.getElementById('upload-status').innerText = "Image Uploaded Successfully!";
        }
    });

    document.getElementById("upload-btn").addEventListener("click", () => myWidget.open());

    // Submit to Google Sheet (Requires a Google Apps Script Web App URL)
    document.getElementById('product-form').addEventListener('submit', function(e) {
        e.preventDefault();
        const submitBtn = document.querySelector('.btn-save');
        submitBtn.innerText = "Saving to Google Sheet...";
        
        // This is where you would call your Google Apps Script URL
        // to append the row to your Sheet.
        alert("Details ready to send to Sheet!\nModel: " + document.getElementById('modelName').value + 
              "\nImage: " + document.getElementById('image-url').value);
              
        submitBtn.innerText = "Add to Inventory & Sheet";
    });
</script>

